{
  "name": "k3s Development Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "overrideCommand": false,
  "privileged": true,
  "runArgs": [
    "--cgroupns=host",
    "--tmpfs=/run",
    "--tmpfs=/run/lock"
  ],
  "mounts": [
    "source=/sys/fs/cgroup,target=/sys/fs/cgroup,type=bind"
  ],
  "containerEnv": {
    "container": "docker"
  },
  "postStartCommand": "systemctl enable --now k3s",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-kubernetes-tools.vscode-kubernetes-tools"
      ]
    }
  }
}
